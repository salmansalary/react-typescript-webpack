{
	"name": "base-boilerplate",
	"version": "21.04.05",
	"description": "Base React app with Typescript",
	"author": "Salman Salari",
	"license": "ISC",
	"scripts": {
		"build:dev": "webpack serve --config webpack.config.dev.js --host 0.0.0.0",
		"build:prod": "yarn clean && yarn lint && webpack --config webpacks/webpack.config.prod.js",
		"clean": "rimraf ./dist",
		"lint": "node_modules/.bin/eslint src",
		"test": "yarn jest --watchAll",
		"coverage": "yarn test --coverage",
		"test:ci": "yarn jest",
		"coverage:ci": "yarn test:ci --coverage",
		"start": "yarn build:dev",
		"build": "yarn clean && yarn lint && yarn build:prod",
		"serverDependencies": "cd webserver && yarn install",
		"server": "node ./webserver/index.js",
		"swagger": "swagger-codegen generate -i http://petstore.swagger.io/v2/swagger.json -l typescript-node -o ./src/apis/generated",
		"nswag": "nswag openapi2tsclient /input:http://petstore.swagger.io/v2/swagger.json /output:src/apis/generated/api.ts /runtime:NetCore31 /template:Axios /typeStyle:interface"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"classnames": "^2.3.1",
		"i18next": "^20.1.0",
		"lodash": "^4.17.21",
		"moment": "^2.29.1",
		"react": "^17.0.2",
		"react-combine-reducers": "^1.1.1",
		"react-date-picker": "^8.1.1",
		"react-dom": "^17.0.2",
		"react-i18next": "^11.8.12",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"react-select": "^4.3.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@svgr/webpack": "^5.5.0",
		"@types/enzyme": "^3.10.8",
		"@types/jest": "^26.0.22",
		"@types/jsdom": "^16.2.10",
		"@types/node": "^14.14.37",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/react-router": "^5.1.13",
		"@types/systemjs": "^6.1.0",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"autoprefixer": "^10.2.5",
		"babel-polyfill": "^6.26.0",
		"case-sensitive-paths-webpack-plugin": "^2.4.0",
		"copy-webpack-plugin": "^8.1.0",
		"css-loader": "^5.2.0",
		"dotenv-webpack": "^7.0.2",
		"enzyme": "^3.11.0",
